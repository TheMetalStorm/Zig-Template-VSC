{
    //Debugging
    "debug.allowBreakpointsEverywhere": true,
    
    // Code Runner
    "code-runner.runInTerminal": true,
    "code-runner.executorMap":{
        "zig": "zig build run #"
    } ,
    
    // Zig
    "zig.zls.enabled": "on",
    "zig.formattingProvider": "zls",
    "[zig]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ziglang.vscode-zig",
        "files.eol": "\n"
    },
}
